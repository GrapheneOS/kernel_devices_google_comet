#include <dt-bindings/thermal/thermal.h>

&acpm_mfd_bus1 {
	s2mpg15mfd@0 {
		zuma_tm1: s2mpg15_spmic_tm1 {
			compatible = "google,s2mpg15-spmic-thermal";
			#thermal-sensor-cells = <1>;
			adc_chan_en = /bits/ 8 <0xff>;
		};
	};
};

/* Thermal Zones */
&thermal_zones {
	soc_therm {
		polling-delay-passive = <0>;
		polling-delay = <0>;
		thermal-governor = "user_space";
		thermal-sensors = <&zuma_tm1 0>;
		trips {
			trip_config0: trip-config0 {
				temperature = <125000>;
				hysteresis = <1000>;
				type = "passive";
			};
		};
	};
	rffe_therm {
		polling-delay-passive = <0>;
		polling-delay = <0>;
		thermal-governor = "user_space";
		thermal-sensors = <&zuma_tm1 1>;
		trips {
			trip_config1: trip-config1 {
				temperature = <121000>;
				hysteresis = <1000>;
				type = "passive";
			};
			backup_shutdown_sw: backup-shutdown-sw {
				temperature = <123000>;
				hysteresis = <1000>;
				type = "critical";
			};
			backup_shutdown_hw: backup-shutdown-hw {
				temperature = <125000>;
				hysteresis = <1000>;
				type = "hot";
			};
		};
	};
	charger_therm {
